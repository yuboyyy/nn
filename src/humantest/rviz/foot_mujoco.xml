<mujoco model="mycar">
  <option iterations="50" timestep="0.001" solver="PGS" gravity="0 0 -9.81" />

  <compiler angle="radian" meshdir="meshes" eulerseq="zyx" autolimits="true" />

  <default>
    <joint limited="false" damping="0.01" armature="0.01" frictionloss="0.01" /> 
    <geom condim="4" contype="1" conaffinity="15" friction="0.9 0.2 0.2" solref="0.001 2" />
    <motor ctrllimited="true" />
    <equality solref="0.001 2" />
    <default class="visualgeom">
      <geom material="visualgeom" condim="1" contype="0" conaffinity="0" />
    </default>
  </default>

  <worldbody>
    <light directional="true" diffuse="0.4 0.4 0.4" specular="0.1 0.1 0.1" pos="0 0 5.0" dir="0 0 -1" castshadow="false" />
    <light directional="true" diffuse="0.6 0.6 0.6" specular="0.2 0.2 0.2" pos="0 0 4" dir="0 0 -1" />
    <geom name="ground" type="plane" pos="0 0 0" size="100 100 0.001" quat="1 0 0 0" material="matplane" condim="3" conaffinity="15" />
    <camera name="fixed" pos="0 -3.0 0.5" xyaxes="1 0 0 0 0 1" />
    <camera name="track" mode="trackcom" pos="0 -3.0 0.5" xyaxes="1 0 0 0 0 1" />
    <body name="root" pos="0 0 0">  
      <freejoint name="root" />
      <site name="imu" size="0.01" pos="0 0 0" />
      <!-- base_footprint的碰撞体（球体） -->
      <geom type="sphere" size="0.001" contype="1" conaffinity="0" density="0" group="1" class="visualgeom" />
      <!-- 底盘的可视化几何（圆柱体） -->
      <geom size="0.1 0.04" pos="0 0 0.055" type="cylinder" rgba="0.8 0.3 0.1 0.5" contype="1" conaffinity="0" density="0" group="1" class="visualgeom" />
      <!-- 底盘的碰撞体（圆柱体） -->
      <geom type="cylinder" size="0.1 0.04" rgba="0.8 0.3 0.1 0.5" pos="0 0 0.055" />

      <!-- 左驱动轮 -->
      <body name="left_wheel" pos="0 0.1 0.0325">
        <inertial pos="0 0 0" quat="0.707107 0 0 0.707107" mass="0.2" diaginertia="0.000106 0.0001056 0.0001056" />
        <joint name="left_wheel2base_link" pos="0 0 0" axis="0 1 0" limited="false" />
        <!-- 左轮可视化几何（圆柱体） -->
        <geom size="0.0325 0.0075" quat="0.707212 0.707002 0 0" type="cylinder" rgba="0 0 0 1" contype="1" conaffinity="0" density="0" group="1" class="visualgeom" />
        <!-- 左轮碰撞体（已集成到可视化几何中，删除冗余标签） -->
        <!-- <geom type="cylinder" size="0.0325 0.0075" rgba="0 0 0 1" quat="0.707212 0.707002 0 0" /> -->
      </body>

      <!-- 右驱动轮 -->
      <body name="right_wheel" pos="0 -0.1 0.0325">
        <inertial pos="0 0 0" quat="0.707107 0 0 0.707107" mass="0.2" diaginertia="0.000106 0.0001056 0.0001056" />
       <joint name="right_wheel2base_link" pos="0 0 0" axis="0 1 0" limited="false" />
        <!-- 右轮可视化几何（圆柱体） -->
        <geom size="0.0325 0.0075" quat="0.707212 0.707002 0 0" type="cylinder" rgba="0 0 0 1" contype="1" conaffinity="0" density="0" group="1" class="visualgeom" />
        <!-- 右轮碰撞体（已集成到可视化几何中，删除冗余标签） -->
        <!-- <geom type="cylinder" size="0.0325 0.0075" rgba="0 0 0 1" quat="0.707212 0.707002 0 0" /> -->
      </body>

      <!-- 前万向轮 -->
      <body name="front_wheel" pos="0.0925 0 0.0075">
        <inertial pos="0 0 0" mass="0.1" diaginertia="2.25e-07 2.25e-07 2.25e-07" />
        <joint name="front_wheel2base_link" pos="0 0 0" axis="0.57735 0.57735 0.57735" limited="false" />
        <!-- 前轮可视化几何（球体） -->
        <geom size="0.0075" rgba="0 0 0 1" contype="1" conaffinity="0" density="0" group="1" class="visualgeom" />
        <!-- 前轮碰撞体（球体） -->
        <geom type="sphere" size="0.0075" rgba="0 0 0 1" />
      </body>

      <!-- 后万向轮 -->
      <body name="back_wheel" pos="-0.0925 0 0.0075">
        <inertial pos="0 0 0" mass="0.1" diaginertia="2.25e-07 2.25e-07 2.25e-07" />
       <joint name="back_wheel2base_link" pos="0 0 0" axis="0.57735 0.57735 0.57735" limited="false" />
        <!-- 后轮可视化几何（球体） -->
        <geom size="0.0075" rgba="0 0 0 1" contype="1" conaffinity="0" density="0" group="1" class="visualgeom" />
        <!-- 后轮碰撞体（球体） -->
        <geom type="sphere" size="0.0075" rgba="0 0 0 1" />
      </body>
    </body>
  </worldbody>

  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1=".0 .0 .0" rgb2=".8 .8 .8" width="100" height="100" />
    <material name="matplane" reflectance="0." texture="texplane" texrepeat="1 1" texuniform="true" />
    <material name="visualgeom" rgba="0.5 0.9 0.2 1" />
  </asset>

  <actuator>
    <motor name="left_wheel2base_link" joint="left_wheel2base_link" ctrllimited="true" ctrlrange="-5 5" gear="100" />  
    <motor name="right_wheel2base_link" joint="right_wheel2base_link" ctrllimited="true" ctrlrange="-5 5" gear="100" />
  </actuator>

  <sensor>
    <actuatorpos name="left_wheel2base_link_p" actuator="left_wheel2base_link" />
    <actuatorvel name="left_wheel2base_link_v" actuator="left_wheel2base_link" />
    <actuatorfrc name="left_wheel2base_link_f" actuator="left_wheel2base_link" noise="0.001" />
    <actuatorpos name="right_wheel2base_link_p" actuator="right_wheel2base_link" />
    <actuatorvel name="right_wheel2base_link_v" actuator="right_wheel2base_link" />
    <actuatorfrc name="right_wheel2base_link_f" actuator="right_wheel2base_link" noise="0.001" />
    <framequat name="orientation" objtype="site" noise="0.001" objname="imu" />
    <gyro name="angular-velocity" site="imu" noise="0.005" cutoff="34.9" />
  </sensor>
</mujoco>